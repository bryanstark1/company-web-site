<%- include('../partials/head') %>
<%- include('../partials/header') %>
<h1><%= title %></h1>
<ul class="staff-list">
  <% staff.forEach((s) => { %>
    <li>
      <form class="delete-button" action="/staff/<%= s.id %>?_method=DELETE" method="POST">
        <button type="submit">X</button>
      </form>
      <a href="/staff/<%= s.id %>"><%= s.name %></a>
    </li>
  <% }) %>
</ul>

<a href="/staff/new">Add New Staff Member</a>

